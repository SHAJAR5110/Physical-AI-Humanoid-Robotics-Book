{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && bash start.sh",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  }
}
